{
  "compilerOptions": {
    "jsx": "react-native",
    "moduleResolution": "bundler", 
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["react", "react-native"]
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
